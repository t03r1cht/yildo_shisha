<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_drinks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:context="de.shisha.yildo.yildoshisha_app.DrinksActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/section_warme_getraenke"
            android:text="@string/section_warme_getraenke"
            android:layout_centerHorizontal="true"
            android:textColor="#565656"
            android:textSize="25sp"
            />

        <ListView
            android:id="@+id/drinks_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/section_warme_getraenke"
            android:layout_marginTop="5dp"
            android:clickable="false">

        </ListView>

    </RelativeLayout>


</LinearLayout>
